<!-- views/cart.ejs -->
<div class="cart-page">
  <div class="container">
    <!-- Page Header -->
    <div class="cart-header">
      <h1>
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
          <path
            d="M9 2C9 1.44772 9.44772 1 10 1H14C14.5523 1 15 1.44772 15 2V4H20C20.5523 4 21 4.44772 21 5C21 5.55228 20.5523 6 20 6H19.9199L19 19C19 20.6569 17.6569 22 16 22H8C6.34315 22 5 20.6569 5 19L4.08008 6H4C3.44772 6 3 5.55228 3 5C3 4.44772 3.44772 4 4 4H9V2Z"
            stroke="#00bcd4" stroke-width="2" />
        </svg>
        Shopping Cart
      </h1>
      <p>Review your items before checkout</p>
    </div>

    <div class="cart-grid">
      <!-- Left: Cart Items -->
      <div class="cart-items-section">
        <div id="cartItemsContainer">
          <!-- Cart items will be dynamically loaded here -->
        </div>

        <!-- Empty Cart State -->
        <div id="emptyCart" class="empty-cart" style="display: none;">
          <svg width="120" height="120" viewBox="0 0 24 24" fill="none">
            <path
              d="M9 2C9 1.44772 9.44772 1 10 1H14C14.5523 1 15 1.44772 15 2V4H20C20.5523 4 21 4.44772 21 5C21 5.55228 20.5523 6 20 6H19.9199L19 19C19 20.6569 17.6569 22 16 22H8C6.34315 22 5 20.6569 5 19L4.08008 6H4C3.44772 6 3 5.55228 3 5C3 4.44772 3.44772 4 4 4H9V2Z"
              stroke="#ddd" stroke-width="2" />
          </svg>
          <h2>Your cart is empty</h2>
          <p>Add some products to get started</p>
          <a href="/menu" class="continue-shopping-btn">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
              <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
            </svg>
            Continue Shopping
          </a>
        </div>
      </div>

      <!-- Right: Order Summary -->
      <div class="order-summary-section">
        <div class="summary-card">
          <h2>Order Summary</h2>

          <!-- ðŸ”´ Discount input section removed -->

          <div class="summary-divider"></div>

          <div class="summary-row">
            <span>Subtotal</span>
            <span id="subtotalAmount">Rs. 0</span>
          </div>

          <!-- This row will remain hidden since no discount is applied on cart page -->
          <div class="summary-row" id="discountRow" style="display: none;">
            <span>Discount (<span id="discountCodeLabel"></span>)</span>
            <span id="discountAmount" style="color: #27ae60; font-weight: bold;">- Rs. 0</span>
          </div>

          <div class="summary-row">
            <span>Tax (5%)</span>
            <span id="taxAmount">Rs. 0</span>
          </div>

          <div class="summary-row">
            <span>Shipping</span>
            <span class="free-tag">FREE</span>
          </div>

          <div class="summary-divider"></div>

          <div class="summary-row total">
            <span>Total</span>
            <span id="totalAmount">Rs. 0</span>
          </div>

          <!-- Button text already changed earlier -->
          <button id="checkoutBtn" class="checkout-btn" disabled>
            Get Discount
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
              <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
            </svg>
          </button>

          <a href="/menu" class="continue-link">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
              <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
            </svg>
            Continue Shopping
          </a>

          <div class="security-badge">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
              <path d="M12 2L4 6V12C4 16.4183 7.58172 20 12 20C16.4183 20 20 16.4183 20 12V6L12 2Z" stroke="#27ae60"
                stroke-width="2" />
              <path d="M9 12L11 14L15 10" stroke="#27ae60" stroke-width="2" stroke-linecap="round" />
            </svg>
            <span>Secure Checkout</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Cart Page Styles */
  .cart-page {
    min-height: 80vh;
    padding: 40px 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .cart-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .cart-header h1 {
    font-size: 42px;
    color: #333;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    margin: 0 0 10px 0;
  }

  .cart-header p {
    font-size: 18px;
    color: #777;
    margin: 0;
  }

  .cart-grid {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 40px;
  }

  .cart-items-section {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .cart-item {
    background: white;
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    display: flex;
    gap: 20px;
    transition: all 0.3s;
  }

  .cart-item:hover {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.12);
  }

  .item-image {
    width: 120px;
    height: 120px;
    border-radius: 8px;
    object-fit: cover;
    background: #f5f5f5;
    flex-shrink: 0;
  }

  .item-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .item-name {
    font-size: 20px;
    font-weight: 700;
    color: #333;
    margin: 0;
  }

  .item-price {
    font-size: 18px;
    color: #00bcd4;
    font-weight: 600;
  }

  .item-actions {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-top: auto;
  }

  .quantity-controls {
    display: flex;
    align-items: center;
    gap: 12px;
    background: #f5f5f5;
    border-radius: 8px;
    padding: 8px 12px;
  }

  .quantity-btn {
    width: 30px;
    height: 30px;
    border: none;
    background: white;
    color: #00bcd4;
    font-size: 18px;
    font-weight: 700;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .quantity-btn:hover:not(:disabled) {
    background: #00bcd4;
    color: white;
  }

  .quantity-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .quantity-display {
    font-size: 16px;
    font-weight: 600;
    color: #333;
    min-width: 30px;
    text-align: center;
  }

  .remove-btn {
    padding: 8px 16px;
    background: #fee;
    color: #e74c3c;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .remove-btn:hover {
    background: #e74c3c;
    color: white;
  }

  .empty-cart {
    background: white;
    border-radius: 12px;
    padding: 80px 40px;
    text-align: center;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  }

  .empty-cart h2 {
    font-size: 28px;
    color: #555;
    margin: 20px 0 10px;
  }

  .empty-cart p {
    font-size: 16px;
    color: #999;
    margin: 0 0 30px;
  }

  .continue-shopping-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    background: #00bcd4;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    transition: all 0.3s;
  }

  .continue-shopping-btn:hover {
    background: #0097a7;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 188, 212, 0.4);
  }

  .summary-card {
    background: white;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    position: sticky;
    top: 20px;
  }

  .summary-card h2 {
    font-size: 24px;
    color: #333;
    font-weight: 700;
    margin: 0 0 25px 0;
  }

  /* Discount section styles kept unused (you can delete if you want) */
  .discount-section {
    margin-bottom: 20px;
    padding: 15px;
    background: #f8f9fa;
    border-radius: 8px;
  }

  .discount-section h3 {
    font-size: 14px;
    color: #666;
    margin: 0 0 10px 0;
    font-weight: 600;
  }

  .discount-input-group {
    display: flex;
    gap: 8px;
  }

  .coupon-input {
    flex: 1;
    padding: 10px 12px;
    border: 2px solid #ddd;
    border-radius: 6px;
    font-size: 14px;
    outline: none;
    transition: all 0.3s;
  }

  .coupon-input:focus {
    border-color: #00bcd4;
  }

  .apply-discount-btn {
    padding: 10px 20px;
    background: #00bcd4;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    white-space: nowrap;
  }

  .apply-discount-btn:hover {
    background: #0097a7;
  }

  .discount-message {
    margin-top: 10px;
    padding: 8px 12px;
    border-radius: 6px;
    font-size: 13px;
    font-weight: 500;
    display: none;
  }

  .discount-message.success {
    background: #d4edda;
    color: #155724;
    display: block;
  }

  .discount-message.error {
    background: #f8d7da;
    color: #721c24;
    display: block;
  }

  .summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    font-size: 16px;
    color: #555;
  }

  .summary-row span:last-child {
    font-weight: 600;
    color: #333;
  }

  .free-tag {
    color: #27ae60 !important;
    font-weight: 700 !important;
  }

  .summary-divider {
    height: 2px;
    background: #f0f0f0;
    margin: 20px 0;
  }

  .summary-row.total {
    font-size: 20px;
    color: #333;
    font-weight: 700;
  }

  .summary-row.total span:last-child {
    font-size: 24px;
    color: #00bcd4;
  }

  .checkout-btn {
    width: 100%;
    padding: 18px;
    background: #00bcd4;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 18px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    margin-top: 25px;
  }

  .checkout-btn:hover:not(:disabled) {
    background: #0097a7;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 188, 212, 0.4);
  }

  .checkout-btn:disabled {
    background: #ccc;
    cursor: not-allowed;
    transform: none;
  }

  .continue-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    margin-top: 15px;
    color: #00bcd4;
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
    transition: all 0.3s;
  }

  .continue-link:hover {
    color: #0097a7;
    gap: 10px;
  }

  .security-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin-top: 25px;
    padding: 12px;
    background: #f0f9f5;
    border-radius: 8px;
    font-size: 14px;
    color: #27ae60;
    font-weight: 600;
  }

  @media (max-width: 968px) {
    .cart-grid {
      grid-template-columns: 1fr;
    }

    .summary-card {
      position: relative;
      top: 0;
    }

    .cart-header h1 {
      font-size: 32px;
    }

    .cart-item {
      flex-direction: column;
    }

    .item-image {
      width: 100%;
      height: 200px;
    }

    .item-actions {
      flex-direction: column;
      align-items: stretch;
    }

    .quantity-controls {
      justify-content: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    let cart = JSON.parse(localStorage.getItem('cart')) || [];

    // ðŸ”´ Clear any old appliedDiscount so cart doesn't use coupons anymore
    localStorage.removeItem('appliedDiscount');
    let appliedDiscount = null;

    renderCart();

    function renderCart() {
      const container = document.getElementById('cartItemsContainer');
      const emptyCart = document.getElementById('emptyCart');
      const checkoutBtn = document.getElementById('checkoutBtn');

      if (cart.length === 0) {
        container.innerHTML = '';
        emptyCart.style.display = 'block';
        checkoutBtn.disabled = true;
        updateSummary();
        return;
      }

      emptyCart.style.display = 'none';
      checkoutBtn.disabled = false;

      container.innerHTML = cart.map((item, index) => `
        <div class="cart-item">
          <img src="${item.image}" alt="${item.name}" class="item-image">
          <div class="item-details">
            <h3 class="item-name">${item.name}</h3>
            <p class="item-price">Rs. ${item.price.toLocaleString()}</p>
            <div class="item-actions">
              <div class="quantity-controls">
                <button class="quantity-btn" onclick="decreaseQuantity(${index})" ${item.quantity === 1 ? 'disabled' : ''}>
                  âˆ’
                </button>
                <span class="quantity-display">${item.quantity}</span>
                <button class="quantity-btn" onclick="increaseQuantity(${index})">
                  +
                </button>
              </div>
              <button class="remove-btn" onclick="removeItem(${index})">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                  <path d="M6 18L18 6M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
                Remove
              </button>
            </div>
          </div>
        </div>
      `).join('');

      updateSummary();
    }

    function updateSummary() {
      const subtotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
      
      let discount = 0;
      let discountCode = '';
      
      // appliedDiscount is always null on cart page now, so no discount

      const tax = Math.round((subtotal - discount) * 0.05);
      const total = subtotal - discount + tax;

      document.getElementById('subtotalAmount').textContent = `Rs. ${subtotal.toLocaleString()}`;
      document.getElementById('taxAmount').textContent = `Rs. ${tax.toLocaleString()}`;
      document.getElementById('totalAmount').textContent = `Rs. ${total.toLocaleString()}`;

      const discountRow = document.getElementById('discountRow');
      if (discount > 0) {
        discountRow.style.display = 'flex';
        document.getElementById('discountCodeLabel').textContent = discountCode;
        document.getElementById('discountAmount').textContent = `- Rs. ${discount.toLocaleString()}`;
      } else {
        discountRow.style.display = 'none';
      }

      // Sync to Cookie for Server-Side access
      document.cookie = "cart=" + JSON.stringify(cart) + "; path=/; max-age=86400";
    }

    // Global functions for buttons
    window.increaseQuantity = function (index) {
      cart[index].quantity++;
      localStorage.setItem('cart', JSON.stringify(cart));
      renderCart();
    };

    window.decreaseQuantity = function (index) {
      if (cart[index].quantity > 1) {
        cart[index].quantity--;
        localStorage.setItem('cart', JSON.stringify(cart));
        renderCart();
      }
    };

    window.removeItem = function (index) {
      if (confirm('Remove this item from cart?')) {
        cart.splice(index, 1);
        localStorage.setItem('cart', JSON.stringify(cart));
        renderCart();
      }
    };

    // Checkout button - now always goes to /order/preview (discount handled there)
    document.getElementById('checkoutBtn').addEventListener('click', function () {
      if (cart.length > 0) {
        window.location.href = '/order/preview';
      }
    });
  });
</script>
