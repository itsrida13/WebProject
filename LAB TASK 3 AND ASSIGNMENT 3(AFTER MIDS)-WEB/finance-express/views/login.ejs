<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - Finance Express</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

<div class="auth-container">
  <div class="auth-box">
    <!-- Left Side - Branding -->
    <div class="auth-left">
      <h1>Welcome to Finance Express</h1>
      <p>Your trusted partner for financial management and investment solutions.</p>
      
      <div class="features">
        <div class="feature-item">
          <div class="feature-icon">‚úì</div>
          <span>Secure & Trusted Platform</span>
        </div>
        <div class="feature-item">
          <div class="feature-icon">‚úì</div>
          <span>24/7 Customer Support</span>
        </div>
        <div class="feature-item">
          <div class="feature-icon">‚úì</div>
          <span>Expert Financial Advice</span>
        </div>
        <div class="feature-item">
          <div class="feature-icon">‚úì</div>
          <span>Easy Investment Management</span>
        </div>
      </div>
    </div>

    <!-- Right Side - Forms -->
    <div class="auth-right">
      <div id="alertBox" class="alert-box"></div>

      <!-- Tabs -->
      <div class="auth-tabs">
        <button class="auth-tab active" data-tab="login">Login</button>
        <button class="auth-tab" data-tab="signup">Sign Up</button>
      </div>

      <!-- Login Form -->
      <form id="loginForm" class="auth-form active">
        <div class="form-group">
          <label>Email Address</label>
          <input type="email" class="form-input" id="loginEmail" placeholder="john.doe@example.com" required>
          <span class="error-message" id="loginEmailError">Please enter a valid email</span>
        </div>

        <div class="form-group">
          <label>Password</label>
          <div class="password-toggle">
            <input type="password" class="form-input" id="loginPassword" placeholder="Enter your password" required>
            <button type="button" class="toggle-btn" onclick="togglePassword('loginPassword')">üëÅÔ∏è</button>
          </div>
          <span class="error-message" id="loginPasswordError">Password is required</span>
        </div>

        <div class="remember-forgot">
          <label class="remember-me">
            <input type="checkbox" id="rememberMe">
            <span>Remember me</span>
          </label>
          <a href="#" class="forgot-link">Forgot Password?</a>
        </div>

        <button type="submit" class="submit-btn" id="loginBtn">Login</button>

        <div class="divider">
          <span>OR</span>
        </div>

        <div class="social-login">
          <button type="button" class="social-btn">
            <span>üîµ</span> Google
          </button>
          <button type="button" class="social-btn">
            <span>üìò</span> Facebook
          </button>
        </div>
      </form>

      <!-- Signup Form -->
      <form id="signupForm" class="auth-form">
        <div class="form-group">
          <label>Full Name</label>
          <input type="text" class="form-input" id="signupName" placeholder="John Doe" required>
          <span class="error-message" id="signupNameError">Name must be at least 3 characters</span>
          <span class="success-message" id="signupNameSuccess">‚úì Looks good!</span>
        </div>

        <div class="form-group">
          <label>Email Address</label>
          <input type="email" class="form-input" id="signupEmail" placeholder="john.doe@example.com" required>
          <span class="error-message" id="signupEmailError">Please enter a valid email</span>
          <span class="success-message" id="signupEmailSuccess">‚úì Email is valid</span>
        </div>

        <div class="form-group">
          <label>Password</label>
          <div class="password-toggle">
            <input type="password" class="form-input" id="signupPassword" placeholder="Create a password" required>
            <button type="button" class="toggle-btn" onclick="togglePassword('signupPassword')">üëÅÔ∏è</button>
          </div>
          <span class="error-message" id="signupPasswordError">Password must be at least 8 characters</span>
          <span class="success-message" id="signupPasswordSuccess">‚úì Strong password</span>
        </div>

        <div class="form-group">
          <label>Confirm Password</label>
          <div class="password-toggle">
            <input type="password" class="form-input" id="confirmPassword" placeholder="Confirm your password" required>
            <button type="button" class="toggle-btn" onclick="togglePassword('confirmPassword')">üëÅÔ∏è</button>
          </div>
          <span class="error-message" id="confirmPasswordError">Passwords do not match</span>
          <span class="success-message" id="confirmPasswordSuccess">‚úì Passwords match</span>
        </div>

        <div class="remember-forgot">
          <label class="remember-me">
            <input type="checkbox" id="agreeTerms" required>
            <span>I agree to Terms & Conditions</span>
          </label>
        </div>

        <button type="submit" class="submit-btn" id="signupBtn">Create Account</button>

        <div class="divider">
          <span>OR</span>
        </div>

        <div class="social-login">
          <button type="button" class="social-btn">
            <span>üîµ</span> Google
          </button>
          <button type="button" class="social-btn">
            <span>üìò</span> Facebook
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
// Tab switching
const tabs = document.querySelectorAll('.auth-tab');
const forms = document.querySelectorAll('.auth-form');

tabs.forEach(tab => {
  tab.addEventListener('click', () => {
    const tabName = tab.getAttribute('data-tab');
    
    tabs.forEach(t => t.classList.remove('active'));
    forms.forEach(f => f.classList.remove('active'));
    
    tab.classList.add('active');
    document.getElementById(tabName + 'Form').classList.add('active');
  });
});

// Password toggle
function togglePassword(fieldId) {
  const field = document.getElementById(fieldId);
  field.type = field.type === 'password' ? 'text' : 'password';
}

// Validation functions
function validateEmail(email) {
  return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
}

function validateSignupName() {
  const input = document.getElementById('signupName');
  const value = input.value.trim();
  const error = document.getElementById('signupNameError');
  const success = document.getElementById('signupNameSuccess');

  if (value.length < 3) {
    input.classList.add('error');
    input.classList.remove('success');
    error.classList.add('show');
    success.classList.remove('show');
    return false;
  }
  input.classList.remove('error');
  input.classList.add('success');
  error.classList.remove('show');
  success.classList.add('show');
  return true;
}

function validateSignupEmail() {
  const input = document.getElementById('signupEmail');
  const value = input.value.trim();
  const error = document.getElementById('signupEmailError');
  const success = document.getElementById('signupEmailSuccess');

  if (!validateEmail(value)) {
    input.classList.add('error');
    input.classList.remove('success');
    error.classList.add('show');
    success.classList.remove('show');
    return false;
  }
  input.classList.remove('error');
  input.classList.add('success');
  error.classList.remove('show');
  success.classList.add('show');
  return true;
}

function validateSignupPassword() {
  const input = document.getElementById('signupPassword');
  const value = input.value;
  const error = document.getElementById('signupPasswordError');
  const success = document.getElementById('signupPasswordSuccess');

  if (value.length < 8) {
    input.classList.add('error');
    input.classList.remove('success');
    error.classList.add('show');
    success.classList.remove('show');
    return false;
  }
  input.classList.remove('error');
  input.classList.add('success');
  error.classList.remove('show');
  success.classList.add('show');
  return true;
}

function validateConfirmPassword() {
  const password = document.getElementById('signupPassword').value;
  const input = document.getElementById('confirmPassword');
  const value = input.value;
  const error = document.getElementById('confirmPasswordError');
  const success = document.getElementById('confirmPasswordSuccess');

  if (value !== password) {
    input.classList.add('error');
    input.classList.remove('success');
    error.classList.add('show');
    success.classList.remove('show');
    return false;
  }
  input.classList.remove('error');
  input.classList.add('success');
  error.classList.remove('show');
  success.classList.add('show');
  return true;
}

// Real-time validation
document.getElementById('signupName').addEventListener('blur', validateSignupName);
document.getElementById('signupEmail').addEventListener('blur', validateSignupEmail);
document.getElementById('signupPassword').addEventListener('blur', validateSignupPassword);
document.getElementById('confirmPassword').addEventListener('blur', validateConfirmPassword);

// Login form submit
document.getElementById('loginForm').addEventListener('submit', function(e) {
  e.preventDefault();
  const alertBox = document.getElementById('alertBox');
  const loginBtn = document.getElementById('loginBtn');
  
  const email = document.getElementById('loginEmail').value;
  const password = document.getElementById('loginPassword').value;

  if (!email || !password) {
    alertBox.textContent = '‚ö†Ô∏è Please fill in all fields';
    alertBox.className = 'alert-box error show';
    return;
  }

  loginBtn.disabled = true;
  loginBtn.textContent = 'Logging in...';

  // Simulate login
  setTimeout(() => {
    alertBox.textContent = '‚úÖ Login successful! Redirecting...';
    alertBox.className = 'alert-box success show';
    
    setTimeout(() => {
      window.location.href = '/home'; // Redirect to homepage
    }, 1000);
  }, 1500);
});

// Signup form submit
document.getElementById('signupForm').addEventListener('submit', function(e) {
  e.preventDefault();
  const alertBox = document.getElementById('alertBox');
  const signupBtn = document.getElementById('signupBtn');

  const isValid = validateSignupName() && validateSignupEmail() && 
                  validateSignupPassword() && validateConfirmPassword();

  if (!document.getElementById('agreeTerms').checked) {
    alertBox.textContent = '‚ö†Ô∏è Please agree to Terms & Conditions';
    alertBox.className = 'alert-box error show';
    return;
  }

  if (!isValid) {
    alertBox.textContent = '‚ö†Ô∏è Please fix all errors';
    alertBox.className = 'alert-box error show';
    return;
  }

  signupBtn.disabled = true;
  signupBtn.textContent = 'Creating Account...';

  // Simulate signup
  setTimeout(() => {
    alertBox.textContent = '‚úÖ Account created successfully! Redirecting...';
    alertBox.className = 'alert-box success show';
    
    setTimeout(() => {
      window.location.href = '/home'; // Redirect to homepage
    }, 1000);
  }, 1500);
});
</script>

</body>
</html>